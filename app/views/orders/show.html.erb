<h1 class="fs-2">Informações do Pedido</h1>

<h2><%=Order.model_name.human %>: <%= @order.code %></h2>
<ul class="list-group list-group-flush">
  <li class="list-group-item"><%="#{Order.human_attribute_name(:insurance_name)}: #{@order.insurance_name}"%></li>
  <li class="list-group-item"><%="#{Order.human_attribute_name(:package_name)}: #{@order.package_name}"%></li>
  <li class="list-group-item"><%="#{Order.human_attribute_name(:product_model)}: #{@order.product_model}"%></li>
  <li class="list-group-item"><%="#{Order.human_attribute_name(:product_category)}: #{@order.product_category}"%></li>
  <li class="list-group-item"><%="#{Order.human_attribute_name(:contract_period)}: #{@order.contract_period} #{t :month, count: @order.contract_period}"%></li>
  <li class="list-group-item"><%="#{Order.human_attribute_name(:equipment)}: #{@equipment.name}"%></li>
  <li class="list-group-item"><%="#{Order.human_attribute_name(:price)}: #{number_to_currency(@order.price, unit: "R$", separator: ",", delimiter: "", format: "%u %n")}"%></li>
  <li class="list-group-item"><%="#{Order.human_attribute_name(:final_price)}: #{number_to_currency(@order.final_price, unit: "R$", separator: ",", delimiter: "", format: "%u %n")}"%></li>
  <li class="list-group-item"> <%= Order.human_attribute_name(:status) %>: <%= Order.human_attribute_name("status.#{@order.status}")%></li>
</ul>

<% #link_to t(:payment), pagamento_path, class: 'btn btn-dark mt-3'%>

