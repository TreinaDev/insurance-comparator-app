<h1 class="display-6">Informações do Pedido</h1>
<hr/>
<div class="card" style="width: 20rem;">
  <div class="card-header">
    <%= @order.equipment.name %>
  </div>
  <div class="card-body">
    <p class="card-text"><%=Equipment.human_attribute_name(:brand)%>: <%=@order.equipment.brand%></p>
    <p class="card-text"><%=Order.human_attribute_name(:insurance_name)%>: <%=@order.insurance_name%></p>
    <p class="card-text"><%=Order.human_attribute_name(:packages)%>: <%=@order.packages%></p>
    <p class="card-text"><%=Order.human_attribute_name(:insurance_model)%>: <%=@order.insurance_model%></p>
    <p class="card-text"><%=Order.human_attribute_name(:contract_period)%>: <%=@order.contract_period%> <%=(t :month, count: @order.contract_period)%></p>
    <p class="card-text"><%=Order.human_attribute_name(:equipment)%>: <%=@order.equipment.name%></p>
    <p class="card-text"><%=Order.human_attribute_name(:price_percentage)%>: <%=@order.price_percentage%>%</p>
    <p class="card-text"><%=Order.human_attribute_name(:total_price)%>: <%=number_to_currency(@order.total_price)%></p>
    <p class="card-text">Status: <strong><%=Order.human_attribute_name("status.#{@order.status}")%></strong></p>
    <% @order.equipment.photos.each do |photo| %>
      <%= image_tag photo, class:"card-img-top" %>
      <% break %>
    <% end %>
  </div>
</div>

<%= link_to t(:pay), new_order_payment_path(@order), class: 'btn btn-dark mt-3'%>
