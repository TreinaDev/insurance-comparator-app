<h1 class="fs-2">Aquisição do Seguro <%= @insurance.name %></h1>

<% if @order.errors.any? %>
  <h5> <%= t(:please_check_errors, count: @order.errors.count) %>: </h5>
  <ul>
    <% @order.errors.full_messages.each do |msg| %>
      <li class="alert alert-danger" role="alert"><%= msg %></li>
    <% end %>
  </ul>
<%end%>

<div class="container">
  <ul class="list-group">

    <div class="row"> 
      <div class="col-lg-6 col-12">
        <li class="list-group-item">
          <b><%= t :insurance_name %>:</b>
          <%= @insurance.insurance_name %>
        </li>
      </div>
    </div>

    <div class="row"> 
      <div class="col-lg-6 col-12">
        <li class="list-group-item">
          <b><%= t :name %>:</b>
          <%= @insurance.name %>
        </li>
      </div>
    </div>

    <div class="row"> 
      <div class="col-lg-6 col-12">
        <li class="list-group-item">
          <b><%= t :product_model %>:</b>
          <%= @product['product_model'] %>
        </li>
      </div>
    </div>

    <div class="row"> 
      <div class="col-lg-6 col-12">
        <li class="list-group-item">
          <b><%= Order.human_attribute_name(:price) %>:</b>
          <%= "#{number_to_currency(@insurance.price_per_month)}" %>
        </li>
      </div>
    </div>
  </div>

  <%= form_with model: [:product, :insurance, @order], method: :post do |f| %>
    <div class="row"> 
      <div class="col-lg-6 col-12 mb-2">
        <li class="list-group-item">
          <%= f.label :equipment_id, class: 'form-label mt-4' %>
          <%= f.select :equipment_id, current_client.equipment.collect { |e| [ e.name, e.id ] },:include_blank => t(:select_device), class: 'form-control' %>
        </li>
      </div>
    </div>

    <div class="row"> 
      <div class="col-lg-6 col-12 mb-2">
        <li class="list-group-item">
          <%= f.label :contract_period, t(:contract_period), class: 'form-label' %>
          <%= f.select :contract_period,(@insurance.min_period..@insurance.max_period), :include_blank => t(:select_period), class: 'form-control' %>
        </li>
      </div>
    </div>

    <%= f.submit t(:contract_package), class: 'btn btn-dark mt-3 mb-4' %>

  <% end %>
</div>
