<h1 class="fs-2">Emiss√£o de Pagamento </h1>

    <% @payment_options.each do |payment_option| %>
      <%= payment_option.formatted_payment_type_and_name %>
      <p> <%= t :tax_percentage %>: <%= payment_option.tax_percentage %>% </p>
      <p> <%= t :tax_maximum %>: <%= number_to_currency(payment_option.tax_maximum) %>% </p>
      <p> <%= t :max_parcels %>: <%= payment_option.max_parcels %>x </p>
      <p> <%= t :single_parcel_discount %>: <%= payment_option.single_parcel_discount %>% </p>
    <% end %>

    <p><%= Order.human_attribute_name(:insurance_name)%>: <%=@order.insurance_name%></p>
    <p><%= Order.human_attribute_name(:contract_period) %>: <%=@order.contract_period%> <%=(t :month, count: @order.contract_period)%></p>
    <p><%=Order.human_attribute_name(:total_price)%>: <%=number_to_currency(@order.total_price)%></p>

<div class="container">
  <%= form_with model: [@order, @payment] do |f| %>
    <div class="row"> 
      <div class="mb-3 col-lg-3 col-6">
        <%= f.label :parcels, class: 'form-label' %><br />
        <%= f.number_field :parcels, autofocus: true, class: 'form-control' %>
      </div>

      <div class="mb-3 col-lg-3 col-6">
        <%= f.label :payment_options, 'Meio de Pagamento', class: 'form-label' %><br />
        <%= f.collection_select @payment_options, @payment_options, :payment_method_id, :name %>
      </div>
    </div>
    <%= f.submit t(:save), class: 'btn btn-dark mt-3 mb-4' %>
  <% end %>
</div>
