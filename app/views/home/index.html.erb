<div class="d-flex p-2 align-items-center flex-column">
  <h1> Boas Vindas Ao Comparador de Seguros </h1>
  <form class="form-inline">
    <%= form_with(url: search_path, method: :get) do |f|%>
      <div class="d-flex p-2 justify-content-center flex-row">
        <%= f.label :query, 'Produto', class:"col-sm-2 col-form-label pr-4", id:"search_label"%>
        <%= f.text_field :query, class:"form-control" %>
        <button class="btn btn-success" type="submit">Buscar</button>
      </div>
    <% end %>
  </form>
</div>


