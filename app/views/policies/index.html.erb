<% if @orders.any? %>
 <h1 class="display-6">Minhas Apólices</h1>
  <hr/>
  <% @orders.each do |order| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= link_to order.equipment.name, order_policy_path(:order_id => order.id, :id => order.policy_id) %></h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%="#{Order.human_attribute_name(:insurance_name)}: #{order.insurance_name}"%></li>
      <li class="list-group-item"><%="#{Order.human_attribute_name(:package_name)}: #{order.package_name}"%></li>
    </ul>
  </div>
  <% end %>
<% else %>
  <h1 class="display-6">Nenhuma apólice encontrada.</h1>
<% end %>