<% if @equipment.any? %>
  <h1 class="display-6">Meus Dispositivos</h1>
  <hr/>
  <div class="row">
    <% @equipment.each do |equipment| %>
      <div class="col-sm-6" style="width: 22rem;">
        <div class="card" style="width: 20rem;">
          <div class="card-header">
            <%= link_to equipment.name, equipment %>
          </div>
          <div class="card-body">
            <p class="card-text"><%=Equipment.human_attribute_name(:brand)%>: <%= equipment.brand %></p>
            <p class="card-text"><%=Equipment.human_attribute_name(:purchase_date)%>: <%= I18n.l(equipment.purchase_date) %></p>
            <% equipment.photos.each do |photo| %>
              <%= image_tag photo, class:"card-img-top" %>
              <% break %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <% flash.now[:alert] = 'Nenhum dispositivo encontrado' %>
<% end %>
<br/>
<div>
  <%= link_to 'Cadastrar Novo', new_equipment_path, class: "btn btn-dark mt-2" %>
  <%= link_to 'Voltar', root_path, class: "btn btn-dark mt-2" %>
</div>
