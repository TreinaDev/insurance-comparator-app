<h1>Cadastro de Dispositivo</h1>

<% if @equipment.errors.any? %>
    <p> Verifique os erros abaixo: </p>
    <ul>
    <% @equipment.errors.full_messages.each do |msg| %>
        <li><%= msg %> </li>
    <% end %>
    </ul>
<%end%>

<%= form_with(model:@equipment) do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>
  <p><%= f.label :brand %>
  <%= f.text_field :brand %></p>
  <p><%= f.label :purchase_date %>
  <%= f.date_field :purchase_date %></p>
  <p><%= f.label :invoice %>
  <%= f.file_field :invoice %></p>
  <p><%= f.label :photos %>
  <%= f.file_field :photos, multiple: true %></p>
  <%= f.submit 'Salvar' %>
<% end %>

<p><%= link_to 'Voltar', equipment_index_path %></p>